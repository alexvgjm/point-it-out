{
  "name": "pointitout",
  "version": "0.2.3",
  "type": "module",
  "sideEffects": false,
  "description": "A tiny library to mark/point out DOM elements using absolutely positioned elements or procedurally generated SVGs",
  "homepage": "https://github.com/alexvgjm/point-it-out",
  "author": {
    "name": "Alexander Vega",
    "email": "contacto@alexvega.net",
    "url": "https://alexvega.net"
  },
  "keywords": [
    "pointout",
    "markout",
    "svg",
    "dom"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "test": "npm run test:visual && npm run test:unit",
    "lint": "eslint .",
    "test:visual": "playwright test",
    "test:unit": "vitest",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "build:package": "tsc && vite build --config vite-build.config.ts && node ./postbuild.js",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.28.1",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@sveltejs/adapter-auto": "^7.0.1",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^7.0.0",
    "@types/eslint": "^9.6.0",
    "eslint": "^10.0.2",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^15.0.0",
    "happy-dom": "^14.12.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "publint": "^0.2.12",
    "svelte": "^5.53.3",
    "svelte-check": "^4.4.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "highlight.js": "^11.10.0",
    "just-throttle": "^4.2.0",
    "vite-plugin-dts": "4.0.0-beta.2"
  }
}
