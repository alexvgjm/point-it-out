{
  "name": "pointitout",
  "version": "0.2.5",
  "type": "module",
  "sideEffects": false,
  "description": "A tiny library to mark/point out DOM elements using absolutely positioned elements or procedurally generated SVGs",
  "homepage": "https://github.com/alexvgjm/point-it-out",
  "author": {
    "name": "Alexander Vega",
    "email": "contacto@alexvega.net",
    "url": "https://alexvega.net"
  },
  "keywords": [
    "pointout",
    "markout",
    "svg",
    "dom"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "test": "npm run test:visual && npm run test:unit",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:visual": "playwright test",
    "test:unit": "vitest",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "build:package": "tsc && vite build --config vite-build.config.ts && node ./postbuild.js",
    "prepare": "husky",
    "build:docs": "cross-env DOCS=true vite build --config vite-docs.config.ts && cross-env DOCS=true node ./postbuild.js"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.2",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "happy-dom": "^14.12.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.12",
    "svelte": "^5.0.0-next.1",
    "svelte-check": "^3.6.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.0.0-alpha.20",
    "vite": "^5.0.11",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "highlight.js": "^11.10.0",
    "just-throttle": "^4.2.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
